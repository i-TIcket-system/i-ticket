# i-Ticket Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ===== DATABASE =====
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# For local development with Docker:
DATABASE_URL="postgresql://iticket:YOUR_DB_PASSWORD@localhost:5432/iticket"

# For production (managed database):
# DATABASE_URL="postgresql://iticket_app:STRONG_PASSWORD@your-db-host.com:5432/iticket?sslmode=require"

# ===== AUTHENTICATION (REQUIRED) =====
# Generate NEXTAUTH_SECRET with:
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
# MUST be 32+ bytes, unique for each environment
NEXTAUTH_SECRET="GENERATE_A_32_BYTE_BASE64_STRING_HERE"

# Application URL
NEXTAUTH_URL="http://localhost:3000"
# Production: NEXTAUTH_URL="https://i-ticket.et"

# ===== PAYMENT (TeleBirr) =====
# For development, use demo mode
TELEBIRR_APP_ID="demo"
TELEBIRR_APP_KEY="demo"
DEMO_MODE="true"

# For production, get credentials from TeleBirr merchant portal
# Contact: business@ethiotelecom.et
# TELEBIRR_APP_ID="your_app_id"
# TELEBIRR_APP_KEY="your_app_key"
# TELEBIRR_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\nYour key here\n-----END PUBLIC KEY-----"
# TELEBIRR_API_URL="https://api.telebirr.com/v1"
# TELEBIRR_NOTIFY_URL="https://yourdomain.com/api/payments/telebirr/callback"
# TELEBIRR_MERCHANT_CODE="YOUR_MERCHANT_CODE"
# TELEBIRR_WEBHOOK_IPS="196.189.124.100,196.189.124.101" # Optional: TeleBirr server IPs
# DEMO_MODE="false"

# ===== PUBLIC VARIABLES (Accessible in browser) =====
NEXT_PUBLIC_DEMO_MODE="true"
# Production: NEXT_PUBLIC_DEMO_MODE="false"

# ===== SMS GATEWAY (Optional) =====
# For development, use mock mode (logs to console)
SMS_MOCK="true"

# For production with Africa's Talking or similar provider
# SMS_GATEWAY_URL="https://api.africastalking.com/version1/messaging"
# SMS_GATEWAY_API_KEY="your_api_key"
# SMS_GATEWAY_USERNAME="your_username"
# SMS_GATEWAY_SHORTCODE="9999"
# SMS_WEBHOOK_SECRET="your_webhook_secret"
# SMS_MOCK="false"

# ===== CLICKUP INTEGRATION (Optional) =====
# Get API key from: ClickUp > Settings > Apps > Generate API Token
# This is optional for local development
# CLICKUP_API_KEY="pk_your_api_key_here"
# CLICKUP_LIST_SUPPORT="your_support_list_id"
# CLICKUP_LIST_ALERTS="your_alerts_list_id"
# CLICKUP_LIST_AUDIT="your_audit_list_id"
# CLICKUP_ENABLED="true"

# ===== CRON JOBS (Optional) =====
# Random secret for securing cron endpoints
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
# CRON_SECRET="your_random_secret"

# ===== ERROR MONITORING (Production) =====
# SENTRY_DSN="https://your-sentry-key@sentry.io/project-id"
# SENTRY_ENVIRONMENT="production"

# ===== LOGGING (Production) =====
# LOG_LEVEL="info"  # debug, info, warn, error
# LOG_FORMAT="json"  # json, pretty
