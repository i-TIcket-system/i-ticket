# SMS Bot Configuration
# Copy this to .env and fill in your actual values

# ===== SMS Gateway (Negarit/GeezSMS) =====
SMS_GATEWAY_URL=https://api.negarit.com/v1/sms/send
SMS_GATEWAY_API_KEY=your_negarit_api_key_here
SMS_GATEWAY_SHORTCODE=9999
SMS_WEBHOOK_SECRET=your_webhook_secret_here

# ===== TeleBirr Payment =====
TELEBIRR_APP_ID=your_telebirr_app_id
TELEBIRR_APP_KEY=your_telebirr_app_key
TELEBIRR_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nyour_public_key_here\n-----END PUBLIC KEY-----
TELEBIRR_API_URL=https://api.telebirr.com/v1
TELEBIRR_NOTIFY_URL=https://your-domain.com/api/payments/telebirr/callback
TELEBIRR_MERCHANT_CODE=ITICKET001

# ===== Demo Mode (for testing without real SMS/payment) =====
DEMO_MODE=true

# ===== Cron Job Security =====
CRON_SECRET=your_random_secret_for_cron_jobs

# ===== Existing Variables (keep these from your current .env) =====
